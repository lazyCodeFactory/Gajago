<%@ page language="java" contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ include file="/WEB-INF/views/admin/common/cmmnHead.jsp"%>
<script type="text/javascript">
$(document).ready(function(){
	fixed_tbl_height();
	prod_padding();
	
	$('.calendar').datepicker({
      showOn: "button",
      buttonImage: "http://static.ssocio.net/admin/images/ico_calendar.gif",
      buttonImageOnly: true
    });
	
	$(".tab1").click(function() {
		f_goTab(1);
	});

	$(".tab2").click(function() {
		f_goTab(2);
	});
	
	$(".tab3").click(function() {
		f_goTab(3);
	});
	
	//조회버튼클릭
	$(".btn_r").click(function(){
		searchForm();
	});
	
});

function f_goTab(index) {
	$("#TAB_INDEX").val(index);
	
	if(index == 1) {
		$("#S_START_DATE").val($("#S_START_DATE").val().replace(/\-/ig, ''));
	 	$("#S_END_DATE").val($("#S_END_DATE").val().replace(/\-/ig, ''));
	 	$('#PROD_TYPE_CD').val('');
		$("#frm").attr("action", "/admin/adjust/selectCpltListAdjust.do").submit();
	}else if(index == 2) {
		$("#S_START_DATE").val($("#S_START_DATE").val().replace(/\-/ig, ''));
	 	$("#S_END_DATE").val($("#S_END_DATE").val().replace(/\-/ig, ''));
	 	$('#PROD_TYPE_CD').val(1);
		$("#frm").attr("action", "/admin/adjust/selectCpltListSellAdjust.do").submit();
	}else if(index == 3) {
		$("#S_START_DATE").val($("#S_START_DATE").val().replace(/\-/ig, ''));
	 	$("#S_END_DATE").val($("#S_END_DATE").val().replace(/\-/ig, ''));
	 	$('#PROD_TYPE_CD').val(2);
		$("#frm").attr("action", "/admin/adjust/selectCpltListShareAdjust.do").submit();
	}
}

function searchForm() {
	if ($('#S_END_DATE').val().replace(/\-/gi, "") < $('#S_START_DATE').val().replace(/\-/gi, "")) {
		alert("종료일은 시작일 이후로 설정해 주세요.");
		$('#S_END_DATE').val($('#S_START_DATE').val());
		return;
	} 
	$("#S_START_DATE").val($("#S_START_DATE").val().replace(/\-/ig, ''));
 	$("#S_END_DATE").val($("#S_END_DATE").val().replace(/\-/ig, ''));
	$("#frm").attr("action", "/admin/adjust/selectCpltListAdjust.do").submit();
}

function goSellDetail(MBER_SEQ){
	$("#MBER_SEQ").val(MBER_SEQ);
	$("#S_START_DATE").val($("#S_START_DATE").val().replace(/\-/ig, ''));
 	$("#S_END_DATE").val($("#S_END_DATE").val().replace(/\-/ig, ''));
	$("#frm").attr("action", "/admin/adjust/selectCpltDtlListSellAdjust.do").submit();
}

function goShareDetail(MBER_SEQ){
	$("#MBER_SEQ").val(MBER_SEQ);
	$("#S_START_DATE").val($("#S_START_DATE").val().replace(/\-/ig, ''));
 	$("#S_END_DATE").val($("#S_END_DATE").val().replace(/\-/ig, ''));
	$("#frm").attr("action", "/admin/adjust/selectCpltDtlListShareAdjust.do").submit();
}

function go_Exceldown(){
	$("#S_START_DATE").val($("#S_START_DATE").val().replace(/\-/ig, ''));
 	$("#S_END_DATE").val($("#S_END_DATE").val().replace(/\-/ig, ''));
 	$("#frm").attr("action","/admin/adjust/selectCpltListAdjustToCsv.do").submit();
// 	$("#frm").attr("action","/admin/adjust/selectCpltListAdjustToExcel.do").submit();
}
/* ======================================================================
Function : 엔터키 입력
Return   : 없음
========================================================================= */
function enterKeyPress(){
	if(event.keyCode == 13){
		$(".btn_r").click();
	}
}

//페이지 이동
function GoPage(pageNo) {
	$("#PAGE_NO").val(pageNo);
	$("#S_START_DATE").val($("#S_START_DATE").val().replace(/\-/ig, ''));
 	$("#S_END_DATE").val($("#S_END_DATE").val().replace(/\-/ig, ''));
	$("#frm").attr("action","/admin/adjust/selectCpltListAdjust.do").submit();
}
</script>


