$(document).ready(function() {
	// 헤더 set
	header.type	= 2; // 0 : 타이틀영역만존재, 1 : 검색HEADER, 2 : SELECT TYPE HEADER, 3 : AD MENU TYPE HEADER, 4 : SUB TYPE HEADER
	header.title = "판매상품 반품신청 내역";
	document.title = "판매상품 반품신청 내역";
	header.method = "POST";
	header.backUrl = "/mobile/buy/selectBuyMain.do";
	header.form = $("#frm");
	header.callback = "";
	initHeader();
	
	displayFooter(false);

	// 검색 클릭 이벤트
	$("#btn_search_bar").click(function() {
		f_searchBuySaleList("list");
	});

	// 상품명 삭제 이벤트
	$("#prodNmDel").click(function() {
		$("#S_PROD_NM").val("");
		$("#prodDelBtn").hide();
	});

	// 조회기간 변경 이벤트
	$("#S_SEARCH_PERI").change(function() {
		var val = $(this).val();

		if(val == "3M") {
			f_clickDate("M", 3);
		}else if(val == "6M") {
			f_clickDate("M", 6);
		}else if(val == "1Y") {
			f_clickDate("Y", 1);
		}else if(val == "10Y") {
			f_clickDate("Y", 10);
		}
	});

	$(window).scroll(function() {
		if($(window).scrollTop() == $(document).height() - $(window).height()){
			var next = $("#pagingNext").val();
			if(next == "true") {
				f_searchSalePageing();
			}
		}
	});

	$("#S_SEARCH_PERI").trigger("change");
});


