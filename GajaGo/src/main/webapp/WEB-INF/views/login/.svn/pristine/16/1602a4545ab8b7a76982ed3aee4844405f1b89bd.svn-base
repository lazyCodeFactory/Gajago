<form name="frm" id="frm" method="post">
	<input type="hidden" id="ACTION" name="ACTION"> <input
		type="hidden" id="S_SEARCH_PERI" name="S_SEARCH_PERI"
		value="${searchParam.S_SEARCH_PERI}"> <input type="hidden"
		id="S_PROC_STAT_CD" name="S_PROC_STAT_CD"
		value="${searchParam.S_PROC_STAT_CD}"> <input type="hidden"
		id="S_PROD_NM" name="S_PROD_NM" value="${searchParam.S_PROD_NM}">
	<input type="hidden" id="S_ORD_CD" name="S_ORD_CD"
		value="${searchParam.S_ORD_CD}"> <input type="hidden"
		id="S_PROD_CD" name="S_PROD_CD" value="${searchParam.S_PROD_CD}">
	<input type="hidden" id="S_PROD_SEQ" name="S_PROD_SEQ"
		value="${searchParam.S_PROD_SEQ}"> <input type="hidden"
		id="I_CHG_GB_CD" name="I_CHG_GB_CD"> <input type="hidden"
		id="I_CHG_PROC_TYPE_CD" name="I_CHG_PROC_TYPE_CD"> <input
		type="hidden" id="I_PROC_STAT_CD" name="I_PROC_STAT_CD"> <input
		type="hidden" id="I_RFND_CD" name="I_RFND_CD"> <input
		type="hidden" id="S_SCR_ID" name="S_SCR_ID" value="saveSaleExcReq">
	<input type="hidden" name="S_PROD_TYPE_CD" value="1">

		<p class="title">상품 정보</p>
		<c:set var="MBER_SEQ_TEMP" value="" />
		<c:forEach var="buyOrdProdList" items="${list.buyOrdProdList}"
			varStatus="status">
			<ul class="sha_oder">
				<li><c:if
						test="${buyOrdProdList.SELLER_MBER_SEQ != MBER_SEQ_TEMP}">
						<p class="phone">
							<span class="fl"><img src=<custom:codeTag groupCode='SITE_DEFAULT' code='DEFAULT_IMG_URL'/>
								alt="${buyOrdProdList.MINI_SHOP_PATH}">${buyOrdProdList.MINI_SHOP_NM}</span>
							<a class="fr"><strong>전화걸기</strong></a>
						</p>
					</c:if> <c:set var="MBER_SEQ_TEMP"
						value="${buyOrdProdList.SELLER_MBER_SEQ}" />

					<ul>
						<li><img src=<custom:codeTag groupCode='SITE_DEFAULT' code='DEFAULT_IMG_URL'/> alt="${buyOrdProdList.IMG_URL}"></li>
						<li><strong>${buyOrdProdList.PROD_NM}</strong></li>
						<li><span>상품금액 <fmt:formatNumber
									value="${buyOrdProdList.PROD_ORD_AMT}" pattern="#,###" />원
						</span></li>
						<li>
	                		<span>
	                			<c:choose>
								  <c:when test="${buyOrdProdList.DLV_WAY_CD == '1' || buyOrdProdList.DLV_WAY_CD == '2'}" >
								  		<c:choose>
								  		<c:when test="${buyOrdProdList.DLV_PAY_GB_CD == '1' }" >
								  			택배 | 무료배송
								  			<c:if test="${buyOrdProdList.DLV_GROUP_YN eq 'Y' ||  buyOrdProdList.DLV_STAND_AMT > 0}">
								  			(
								  				<c:if test="${buyOrdProdList.DLV_GROUP_YN eq 'Y' }">묶음배송</c:if>
								  				<c:if test="${buyOrdProdList.DLV_GROUP_YN eq 'Y' &&  buyOrdProdList.DLV_STAND_AMT > 0}">,</c:if>
								  				<c:if test="${buyOrdProdList.DLV_STAND_AMT > 0 }"><fmt:formatNumber value="${buyOrdProdList.DLV_STAND_AMT}" pattern="#,###" />원 이상 무료</c:if>
								  			)
								  			</c:if>
								  		</c:when>

								  		<c:when test="${buyOrdProdList.DLV_PAY_GB_CD == '2' }" >
								  			택배 | <fmt:formatNumber value="${buyOrdProdList.DLV_PRCE}" pattern="#,###" />원/<c:if test="${buyOrdProdList.DLV_PAY_F_CD eq '10'}">선불</c:if><c:if test="${buyOrdProdList.DLV_PAY_F_CD eq '20'}">착불</c:if>
								  			<c:if test="${buyOrdProdList.DLV_GROUP_YN eq 'Y' ||  buyOrdProdList.DLV_STAND_AMT > 0}">
								  				(
								  				<c:if test="${buyOrdProdList.DLV_GROUP_YN eq 'Y' }">묶음배송</c:if>
								  				<c:if test="${buyOrdProdList.DLV_GROUP_YN eq 'Y' &&  buyOrdProdList.DLV_STAND_AMT > 0}">,</c:if>
								  				<c:if test="${buyOrdProdList.DLV_STAND_AMT > 0 }"><fmt:formatNumber value="${buyOrdProdList.DLV_STAND_AMT}" pattern="#,###" />원 이상 무료</c:if>
								  				)
								  			</c:if>
								  		</c:when>
								  		</c:choose>
								  </c:when>
								  <c:when test="${buyOrdProdList.DLV_WAY_CD == '3' }" >
								  	우편/등기 | 무료배송
								  </c:when>

								  <c:when test="${buyOrdProdList.DLV_WAY_CD == '4' }" >
								  	<c:choose>

								  		<c:when test="${buyOrdProdList.DLV_PAY_GB_CD == '1' }" >
								  			퀵서비스 | 무료배송
								  		</c:when>

								  		<c:when test="${buyOrdProdList.DLV_PAY_GB_CD == '2' }" >
								  			퀵서비스 | <fmt:formatNumber value="${buyOrdProdList.DLV_PRCE}" pattern="#,###" />원/착불
								  		</c:when>
								  	</c:choose>
								  </c:when>
								  <c:when test="${buyOrdProdList.DLV_WAY_CD == '5' }" >
								  	직거래
								  </c:when>
								</c:choose> |  구매수량 <fmt:formatNumber value="${buyOrdProdList.ORD_QTY}" pattern="#,###" />개
		                	</span>
	                	</li>
					</ul> 
					<c:forEach var="optList" items="${buyOrdProdList.subOrder }">
                  	    <div class="opt_area">
                  	    	<c:choose>
                  	    		<c:when test="${optList.OP_GB_CD == '10' }">
                  	    			<p>${optList.OPT_INFO}(+<fmt:formatNumber value="${optList.OPT_PRCE}" pattern="#,###" />원) </p>
		                			<span><fmt:formatNumber value="${optList.OPT_QTY}" pattern="#,###" />개</span>
                  	    		</c:when>
                  	    		<c:otherwise>
                  	    			<p>[추가상품] ${optList.OPT_INFO}(<fmt:formatNumber value="${optList.OPT_PRCE}" pattern="#,###" />원) </p>
		                			<span><fmt:formatNumber value="${optList.OPT_QTY}" pattern="#,###" />개</span>
                  	    		</c:otherwise>
                  	    	</c:choose> 
	                	</div>
                	</c:forEach>
					</li>
			</ul>
			
			<c:set var ="RCV_NM" value="${buyOrdProdList.RCV_NM}" />
        	<c:set var ="ZIP_CD" value="${buyOrdProdList.ZIP_CD}" />
        	<c:set var ="JUSO_DORO" value="${buyOrdProdList.JUSO_DORO}" />
        	<c:set var ="JUSO_DTL" value="${buyOrdProdList.JUSO_DTL}" />
        	<c:set var ="SELT_GB_CD" value="${buyOrdProdList.SELT_GB_CD}" />
        	<c:set var ="RFND_AMT" value="${buyOrdProdList.RFND_AMT}" /> 
        	<c:set var ="RFND_YN" value="${buyOrdProdList.RFND_YN}" /> 
        	<c:set var ="RCV_TEL" value="${buyOrdProdList.RCV_TEL}" /> 
		</c:forEach>
		<p class="title">교환신청 사유</p>
		<div class="content">
			<ul class="sbox01">
				<li>
					<p class="sub_title">
						교환신청 사유를 선택주세요. <span class="text_r">(필수)</span></p>
					
				</li>
				<li><select id="I_CHG_REASON_CD" name="I_CHG_REASON_CD">
						<custom:codeList var="chgReasonCd" groupCode="CHG_REASON_CD" />
						<option value="">선택</option>
						<c:forEach var="list" items="${chgReasonCd}" varStatus="status">
							<option value="${list.key}">${list.value}</option>
						</c:forEach>
				</select></li>
				<li>
					<p class="sub_title">상세 사유를 입력해 주세요.(선택)</p>
				</li>
				<li>
					<div class="text_box">
						<textarea id="I_CHG_REASON" name="I_CHG_REASON" maxlength="1000"></textarea>
						<span class="byte"><span id="inputByte">0</span>/100</span>
					</div>
				</li>
			</ul>
		</div>

		<p class="title">교환 받으실 상품을 전달 받을 배송지를 입력해 주세요.</p>
		<div class="tbl">
			<table class="tbl-data">
				<colgroup>
					<col width="100px">
					<col width="*">
				</colgroup>
				<tbody>
					<tr>
						<th>이름</th>
						<td><input type="text" id="I_RCV_NM" name="I_RCV_NM"
							maxlength="10" value="${RCV_NM}"></td>
					</tr>
					<tr>
						<th class="stop">주소</th>
						<td class="pd5">
							<ul class="add">
								<li><input type="text" id="I_ZIP_CODE" name="I_ZIP_CODE"
									maxlength="6" class="fl" readonly value="${ZIP_CD}"> <a
									href="javascript:postShow();" class="btn_b fr">우편번호</a></li>
								<li><input type="text" id="I_BAS_ADDR" name="I_BAS_ADDR"
									maxlength="50" readonly value="${JUSO_DORO}"></li>
								<li><input type="text" id="I_DTL_ADDR" name="I_DTL_ADDR"
									maxlength="100" placeholder="상세 주소 입력" value="${JUSO_DTL}"></li>
							</ul>
						</td>
					</tr>
					<tr>
						<th>연락처</th>
						<td class="pd5"><input type="text" id="I_CONTACT"
							name="I_CONTACT" maxlength="14" style="width: 95px;" value="${RCV_TEL}"> <span
							id="secuNoUseYn"><input type="checkbox"
								id="I_SECU_NO_USE_YN" name="I_SECU_NO_USE_YN" class="ml5">
								<label><span>안심번호 이용</span></label></span></td>
					</tr>
					<tr>
						<th>배송메모 (선택)</th>
						<td class="pd5">
							<div class="meno_bx">
								<textarea id="I_SHIP_MEMO" name="I_SHIP_MEMO" maxlength="2000"></textarea>
								<span id="inputShipMemoByte">(0/100)</span>
							</div>
						</td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="btn_enter">
			<a href="#" id="btn_excReq" class="btn_r">교환신청</a>
		</div>

</form>

