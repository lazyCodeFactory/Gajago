function f_delImgShow(obj) {
	var id =  $(obj).attr("id");
	if ($("#"+id).val() != null && $("#"+id).val() != "") {
		$("#"+id).parent().find("a").show();
	}
	else {
		$("#"+id).parent().find("a").hide();
	}
}

