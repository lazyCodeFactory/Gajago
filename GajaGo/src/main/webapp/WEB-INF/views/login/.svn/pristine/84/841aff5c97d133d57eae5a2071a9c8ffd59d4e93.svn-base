	/**
	 * <pre>
	 * 공통 상품별 렌탈 신청취소 처리
	 * 공통 상품별 렌탈 신청취소를 처리 합니다.
	 * @param paramDto
	 * @return
	 * @throws Exception
	 * @date 2015. 8. 19. 오후 2:20:00
	 * @author H.M.Yang
	 * @see com.ssocio.sharing.service.web
	 * </pre>
	 */
	@Override
	public int saveRentalCancel(Map<String, Object> paramDto) throws Exception {
		int nResult = 0;

		String arrProdCd[] = (String[])paramDto.get("S_PROD_CD").toString().split(",");
		String arrMberSeq[] = (String[])paramDto.get("S_MBER_SEQ").toString().split(",");
		String arrReqSeq[] = (String[])paramDto.get("S_REQ_SEQ").toString().split(",");

		for(int i=0; i<arrProdCd.length; i++) {
			paramDto.put("S_PROD_CD", arrProdCd[i]);
			paramDto.put("S_MBER_SEQ", arrMberSeq[i]);
			paramDto.put("S_REQ_SEQ", arrReqSeq[i]);
			nResult = webBuyRentalDao.updateRentalCancel(paramDto);
		}

		return nResult;
	}
	
	public int selectRentalCancelCnt(Map<String, Object> paramDto) throws Exception {
		int nResult = 0;

		String arrProdCd[] = (String[])paramDto.get("S_PROD_CD").toString().split(",");
		String arrMberSeq[] = (String[])paramDto.get("S_MBER_SEQ").toString().split(",");
		String arrReqSeq[] = (String[])paramDto.get("S_REQ_SEQ").toString().split(",");

		for(int i=0; i<arrProdCd.length; i++) {
			paramDto.put("S_PROD_CD", arrProdCd[i]);
			paramDto.put("S_MBER_SEQ", arrMberSeq[i]);
			paramDto.put("S_REQ_SEQ", arrReqSeq[i]);
			nResult += webBuyRentalDao.selectRentalCancelCnt(paramDto);
		}

		return nResult;
	}
}