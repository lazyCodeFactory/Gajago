
	
//<![CDATA[
function OrtChange(){
	if( window.orientation == 90 || window.orientation == -90 ){
		$('body').addClass('horizontal');
        }
	else{
		$('body').removeClass('horizontal');
	}

	$(window).bind("orientationchange", function(event){
		if(event.orientation == "portrait"){
			$('body').removeClass('horizontal');
		}       
		else{
			$('body').addClass('horizontal');
		}
	});
};
//]]>


