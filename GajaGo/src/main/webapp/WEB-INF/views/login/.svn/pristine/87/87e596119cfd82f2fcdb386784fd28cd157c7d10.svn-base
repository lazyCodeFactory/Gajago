function sendSns(code){

	switch(code){
	case '1':
	case '2':
	case '3':
	case '4':
		sns.send(code);
		break;
	case '5':
		break;
	case '7':
		sns.facebook();
		break;
	case '8':
		sns.line();
	break;
	}
}

function historyBack(){
	if(1 == history.length){
		if( '${sessionScope.APP}' == 'SSOCIO'){
			document.location.replace('ssocio://web/closeWebView');
		}
	}else{
		if( '${sessionScope.APP}' == 'SSOCIO'){
			document.location.replace('ssocio://web/hideDetailBottomView');
			setTimeout( function() { 
				history.back();
			}, 1500);
		} else {
			history.back();
		}
	}
}

