					if(isNext == "true"){
						getComments();
					}
				}
			}
		});
	});
	
	function getComments(){
		curPage = parseInt(curPage) + 1;
		$("#CUR_PAGE").val(curPage);
		$.ajax({
			type: 'post',
			async: true, 
			url: '/mobile/board/selectListNanumCommentNext.do', 
			dataType:'json', 
			data: {"PROD_CODE":$("#PROD_CODE").val(), 
				"CUR_PAGE":$("#CUR_PAGE").val(), 
				"TOT_CNT":$("#TOT_CNT").val()
			},
			success: function(response) {
				
				var commentList = response.result.comment.list;
				var html = "";
				$("#new_share_cody ol li").remove();
				for (var i =0;i < commentList.length;i++) {
					html+='<li>';
					html+='	<p class="photo"><img src="<custom:codeTag code="PROFILE_DEFAULT_IMG_URL" groupCode="SITE_DEFAULT" />" alt="'+commentList[i].FILE_URL+'" /></p>';
					html+='	<dl>';
					html+='		<dt class="id">';
					html+='			<span class="fl"><img src="<custom:codeTag code="DEFAULT_IMG_URL" groupCode="SITE_DEFAULT" />" alt="'+commentList[i].LEVEL_IMG+'" /></span>';
					if (commentList[i].MBER_EMAIL.indexOf("@") > -1) {
						html += getMaskingEmail(commentList[i].MBER_EMAIL);
					} else {
						html += commentList[i].MBER_NICK;
					}
					html+='			<span class="fr date"'+timeGap(commentList[i].TIME_GAP)+'</span>';
					html+='		</dt>';
					html+='		<dd>'+commentList[i].REQ_MEMO+'</dd>';
					html+='	</dl>';
					html+='</li>';
				}
				
				$("#new_share_cody ol").append(html);
				
// 				//	페이징 정보를 세팅한다.
				isNext = response.result.paging.next;
				curPage = response.result.paging.curPage;
				
				// TOT_CNT
				$("#TOT_CNT").val(response.result.paging.totCnt);
				
				cdnreload();
			}, 
			error : function(request, status, error) {
				alert("통신 오류가 발생 하였습니다. 잠시 후 다시 시도해 주세요");
			}
		}); 
	}
</script>

