					<c:if test="${result.comments.CNT > 5}">
						<p class="prev"><a href="javascript:prevComment(5);">ㆍㆍㆍ 이전댓글 보기</a></p>
					</c:if>
					<!-- 20151207 add -->
					<div class="comment_type mb45">
						<c:forEach var="comment" items="${result.recomments.list }" varStatus="status">
							<c:choose>
								<c:when test="${comment.MBER_SEQ ne result.prodInfo.MBER_SEQ }">
									<div class="comment_ask">
										<p class="photo"><img src="<custom:codeTag code="PROFILE_DEFAULT_IMG_URL" groupCode="SITE_DEFAULT" />" alt="${comment.FILE_URL }" /></p>
										<div class="comment_pink">
											<dl>
												<!-- 등급 클래스만 바꾸면 됩니다/ grade_01~grade_05-->
												<dt class="id">
													<span class="ico_grade"><img src="${comment.LEVEL_IMG }" alt="" /></span>
													<c:choose>
														<c:when test="${fn:indexOf(comment.MBER_EMAIL, '@') eq -1 }">
															${comment.MBER_NICK }
														</c:when>
														<c:otherwise>
															<custom:maskTag value="${comment.MBER_EMAIL }" type="email" />
														</c:otherwise>
													</c:choose>
													
												</dt>
												<dd>${comment.CONTENTS }
													<div class="date"><custom:timeGap value="${comment.REGIST_DT }" /></div>
												</dd>
											</dl>
										</div>
									</div>
								</c:when>
								<c:otherwise>
									<fmt:formatDate var="bDate" value="${comment.REGIST_DT}" pattern="yyyyMMddHHmm"/>
									<fmt:formatDate var="aDate" value="${result.recomments.list[status.index + 1].REGIST_DT}" pattern="yyyyMMddHHmm"/>
										<c:choose>
											<c:when test="${bDate ne aDate }">
												<div class="comment_answer">
													<div class="comment_blue">
														<div>${comment.CONTENTS }
															<!-- 마지막 말 풍선에만 노출 -->
															<div class="date"><custom:timeGap value="${comment.REGIST_DT }" /></div>
														</div>
													</div>
												</div>
											</c:when>
											<c:otherwise>
												<div class="comment_answer mb0">
													<div class="comment_blue">
														<div>${comment.CONTENTS }</div>
													</div>
												</div>
											</c:otherwise>
										</c:choose>
								</c:otherwise>
							</c:choose>
						</c:forEach>
					</div>
				</section>
				<c:if test="${sessionScope.user.login == 'true'}">
					<div class="page_comment_write">
						<input type="text" id="commentContents" placeholder="댓글을 달아보세요.">
						<a href="javascript:insertProdCommentReg();" class="btn_b">등록</a>
					</div>
				</c:if>
			</div>
			<!-- //comment -->
		</div>
		<!-- //container -->
	</div>
</div>

