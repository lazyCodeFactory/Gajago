					$("#commentContents").bind("focusin", function(){
						$("#commentHeader").css("position","static");
						$(".page_comment_write").css("position","absolute");
					});
					
					$("#commentContents").bind("blur", function(){
						$("#commentHeader, .page_comment_write").css("position","fixed");
					});
				} else {
					$("#commentContents").focus();
				}
			} else {
				$("#page_container").css("min-height",(commentHeight-100)+"px");
				$("#commentContents").focus();
			}
		});

		$("#share_more").click(function(){
			$(".car_header").css("display","none");
			$("#container").css("display","none");
			$("#new_share_body").css("display","block");
			$("#shareHeader").css("display","block");
			
			
			namOn = 1;
// 			getComments();
