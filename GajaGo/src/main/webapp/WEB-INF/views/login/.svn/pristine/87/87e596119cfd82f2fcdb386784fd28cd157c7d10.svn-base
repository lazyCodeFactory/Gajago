		if (formatNumber(prod.wishProdCnt) > 999) {
			$("div.num").text("(999+)");
		} else {
			$("div.num").text(formatNumber(prod.wishProdCnt));
		}
	}

}

/**
 *
 * <pre>
 * 설명 : setDlvWay
 * 설명 : 배송 가능 / 거래 희망 지역 표시
 * @date 2015. 9. 23. 오후 13:30:41
 * @author WOOK.KIM
 * @see
 * </pre>
 */
function setDlvWay(){
// 	var dlvText = '${result.prodInfo.DLV_WAY_NM }';
// 	var dlvText = '<p><span>배송비 ';
	var dlvText = '<p><span>${result.prodInfo.DLV_WAY_NM } | ';

	if(prod.prodTypeCd == '1' || prod.prodTypeCd == '2'){
		switch(prod.dlv.dlvWayCd){
		//	택배
		case '1':
			//제휴택배
			if( prod.dlv.dlvPayGbCd == '1'){
				dlvText += '무료배송</span>';
			} else {
				//조건부 무료 체크
				if( prod.dlv.dlvStandYn == 'Y'){
					dlvText += formatNumber(prod.dlv.dlvPrce) + '원</span> (' + prod.dlv.dlvStandAmt + "원 이상 무료)</p>";
				} else {
					if ( formatNumber(prod.dlv.dlvPrce) == 0) {
						dlvText += '무료배송</span>';
					} else {
						dlvText += formatNumber(prod.dlv.dlvPrce) + '원</span>';
					}
				}
			}
			
			//  도서 산간 체크
			if("" != prod.dlv.getExtLandText()){
// 				dlvText += '</span><br><span>' + prod.dlv.getExtLandText();
				dlvText += '<p>도서산간 배송비 추가<span><a href="javascript:$(\'.delv_layer\').show();popup_show();" id="btn_delv"><img src="http://static.ssocio.net/web/images/newde/del_tip.png" 도서산간팝업 /></a></span></p>';
				var splitExtLand = prod.dlv.getExtLandText().split("/");
