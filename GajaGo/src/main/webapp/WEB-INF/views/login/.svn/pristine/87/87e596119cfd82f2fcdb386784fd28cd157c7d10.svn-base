function initPrceArea(){
	var leftHtml = '';
	var rightHtml = '';
	var dlvText = setDlvWay();
	if( prod.prodTypeCd == '1'){
		if( prod.nrmPrce - prod.sellPrce > 0 ){
			leftHtml += '<p class="price">' + Math.floor((prod.nrmPrce - prod.sellPrce) * 100 / prod.nrmPrce) + '%</p>';
			rightHtml += '<li><span class="s_txt middle_line">' + formatNumber(prod.nrmPrce) + '원</span></li>';
		} else {
			rightHtml += '<li><span class="s_txt middle_line">&nbsp;</span></li>';
		}
		if(dlvText.indexOf("무료배송") > -1) {
			leftHtml += '<p>';
			leftHtml += '<span class="ico_color_box"><img src="http://static.ssocio.net/web/images/newde/free_label.png" alt="무료배송"/></span>';
// 			leftHtml += '<span class="ico_color_box"><img src="http://static.ssocio.net/web/images/newde/coupon_label.png" alt="쿠폰할인"/></span>';
			leftHtml += '</p>';
		}
		rightHtml += '<li><span class="big_type b_txt">' + formatNumber(prod.sellPrce) + '</span>&nbsp;원</li>';
		rightHtml += '<li><span class="red_p">판매상품</span></li>';
	} else if(prod.prodTypeCd == '2'){
// 		html += '<span>' + dlvText + '</span><br>';
		if( prod.mberGbCd == '0'){
			prod.shar.shareDay = Math.ceil(prod.shar.deposit / prod.shar.prce);
			leftHtml += '<p class="price">' + formatNumber(prod.shar.prce) + '<span>원/일</span></p>';
			if(dlvText.indexOf("무료배송") > -1) {
				leftHtml += '<p>';
				leftHtml += '<span class="ico_color_box"><img src="http://static.ssocio.net/web/images/newde/free_label.png" alt="무료배송"/></span>';
//	 			leftHtml += '<span class="ico_color_box"><img src="http://static.ssocio.net/web/images/newde/coupon_label.png" alt="쿠폰할인"/></span>';
				leftHtml += '</p>';
			}
			rightHtml += '<li><span class="s_txt">최대 ' + prod.shar.shareDay + '일</span></li>';
			rightHtml += '<li><span class="b_txt">보증금 ' + formatNumber(prod.shar.deposit) + '원</span></li>';
			rightHtml += '<li><span class="red_p">셰어링상품</span></li>';
		} else if( prod.mberGbCd == '1'){
			leftHtml += '<p class="price">' + formatNumber(prod.shar.prce) + '<span>원/일</span></p>';
			if(dlvText.indexOf("무료배송") > -1) {
				leftHtml += '<p>';
				leftHtml += '<span class="ico_color_box"><img src="http://static.ssocio.net/web/images/newde/free_label.png" alt="무료배송"/></span>';
//	 			leftHtml += '<span class="ico_color_box"><img src="http://static.ssocio.net/web/images/newde/coupon_label.png" alt="쿠폰할인"/></span>';
				leftHtml += '</p>';
			}
			rightHtml += '<li><span class="s_txt">최소  ' + prod.shar.minTerm + '일 ~ 최대 ' + prod.shar.maxTerm + '일</span></li>';
			rightHtml += '<li><span class="b_txt">보증금 ' + formatNumber(prod.shar.deposit) + '원</span></li>';
			rightHtml += '<li><span class="red_p">셰어링상품</span></li>';
		}
	} else if( prod.prodTypeCd == '3'){
		leftHtml += '<p class="date"><span>신청기간 :</span> <fmt:formatDate value="${result.prodInfo.REGIST_DT}" pattern="yyyy.MM.dd" /> ~ <fmt:formatDate value="${result.prodInfo.FREESHARE_END_DT}" pattern="yyyy.MM.dd" /></p>';
		if(dlvText.indexOf("착불") > -1) {
			leftHtml += '<p>';
			leftHtml += '<span class="ico_color_box"><img src="http://static.ssocio.net/web/images/newde/del_label.png" alt="배송착불"/></span>';
// 			leftHtml += '<span class="ico_color_box"><img src="http://static.ssocio.net/web/images/newde/coupon_label.png" alt="쿠폰할인"/></span>';
			leftHtml += '</p>';
		}
		rightHtml += '<li><span class="red_p">나눔상품</span></li>';
	}  else if( prod.prodTypeCd == '5'){
		rightHtml += '<li><span class="red_p">렌탈상품</span></li>';
	}
// 	html += '</p>';

// 	$("#id_prce_area").append(html);
	$(".left_col").append(leftHtml);
