//미니샵 경로 체크
function ext_checkMiniShopPath (str) {
	var pattern = /^[0-9A-Za-z,.,@]*$/;
	//var pattern = /^[0-9A-Za-z,:,/,.,-,@]*$/;
	if (!pattern.test(str)) {
		return false;
	}
	return true;
}

function cfmValidate(){

	$("#PHONE_CHECK").val("N");
	var ph =  $("#ph").val();
	var phVal = "";

	if(ph.length < 10){
		alert("휴대폰번호를 입력해주세요.");
		$('#ph').focus();
		return;
	}else{
		phVal = ph.substring(0,3);
	}

	if(phVal == "010"){
		if(ph.length < 11){
			alert("휴대폰번호를 입력해주세요.");
			$('#ph').focus();
			return;
		}
		$("#PHONE_TEMP").val(ph);
		ph = ph.substring(0,3)+"-"+ph.substring(3,7)+"-"+ph.substring(7,11);
		$("#MBER_PHONE").val(ph);
	}else if(phVal == "011" || phVal == "016" || phVal == "017" || phVal == "018" || phVal == "019"){
		if(phVal.length == 10){
			$("#PHONE_TEMP").val(ph);
			ph = ph.substring(0,3)+"-"+ph.substring(3,6)+"-"+ph.substring(6,10);
			$("#MBER_PHONE").val(ph);
		}else{
			$("#PHONE_TEMP").val(ph);
			ph = ph.substring(0,3)+"-"+ph.substring(3,7)+"-"+ph.substring(7,11);
			$("#MBER_PHONE").val(ph);
		}
	}else{
		alert("휴대폰번호를 입력해주세요.");
		$('#ph').focus();
		return;
	}

	return true;

}

