<%@ page language="java" contentType="text/html; charset=utf-8"
    pageEncoding="utf-8"%>
<!-- 태그는 cmmnHead.jsp 에 선언함 -->
<%@ include file="/WEB-INF/views/admin/common/cmmnHead.jsp"%>
<script type="text/javascript" src="/js/smartEditor/js/HuskyEZCreator.js" charset="utf-8"></script>
<script type="text/javascript">

var oEditors = [];
$(document).ready(function(){

	nhn.husky.EZCreator.createInIFrame({
		oAppRef: oEditors,
		elPlaceHolder: "CONTENTS", // html editor가 들어갈 textarea id 입니다.
		sSkinURI: "/js/smartEditor/SmartEditor2Skin.html",  // html editor가 skin url 입니다.
	    htParams : { 
              // 아래 부분을 추가합니다. 
              // 설정하지 않았을 때읭 기본 값은 Editor 모드입니다. 
              //	- Editor 모드 : WYSIWYG 
              // - HTML 모드 : HTMLSrc 
              //	- TEXT 모드 : TEXT 
              SE_EditingAreaManager : { 
                       sDefaultEditingMode : "WYSIWYG" // HTML 모드로 뜨게 됩니다. 
              } }
		});
	

	
	$("#cancelBtn").click(function(){
		$("#frm").attr("action","/admin/autosms/selectListAutoSms.do").submit();
		
	});

	
});



function fn_cancel(){
	$("#frm").attr("action","/admin/autosms/selectListAutoSms.do").submit();

}

function fn_reg(){
	
	
	if($("#MSG_TPL_CODE").val().length == 0 ){
		alert("메시지코드를 입력해 주세요.");
		$('#MSG_TPL_CODE').focus();
		return;
	}
	
	if($("#TPL_TITLE").val().length == 0 ){
		alert("템플릿명을 입력해 주세요.");
		$('#TPL_TITLE').focus();
		return;
	}
	

		if($("#TITLE").val().length == 0 ){
			alert("제목을 입력해 주세요.");
			$('#TITLE').focus();
			return;
		}
	oEditors.getById["CONTENTS"].exec("UPDATE_CONTENTS_FIELD",[]);//에디터 내용이 저장된다
	
	  var CONTENTS = $('#CONTENTS').val().replace(/<p>&nbsp;<\/p>/gi,'');
	  if(CONTENTS == ''){
		  alert("내용을 입력하셔야 합니다.");
	    $("#CONTENTS").focus();
	    return;
	  }
	
	

	
	if(confirm('등록 하시겠습니까?')){

		 var options = {
				 type : "POST",
				 url : "/admin/autosms/insertAutoReg.do",
// 				 dataType :  "json",
				 contentType: "application/x-www-form-urlencoded; charset=UTF-8",
				 success: function(data){
					 if("S" == data){
						 alert("등록 되었습니다."); 
						 $("#frm").attr("action","/admin/autosms/selectListAutoSms.do").submit();
					 }else{
						 alert("등록 실패 하였습니다. 관리자에게 문의 하세요.");
					 }
					
				 },
				 error : function(request, status, error) {
				    	alert("통신 오류가 발생 하였습니다. 잠시 후 다시 시도해 주세요"   + status  + " request [" + request  + "] error[" + error +"]");

				 }
		 };
		 
		 
	    $("#frm").ajaxSubmit(options);
	}
}

function fn_send_json(){
	if(confirm('발송 하시겠습니까?')){
	 var options = {
			 type : "POST",
			 url : "/admin/autosms/sendJsonHttp.do",
				 dataType :  "json",
			 contentType: "application/x-www-form-urlencoded; charset=UTF-8",
			 success: function(data){
				 alert(data.result);
				
			 },
			 error : function(request, status, error) {
			    	alert("통신 오류가 발생 하였습니다. 잠시 후 다시 시도해 주세요"   + status  + " request [" + request  + "] error[" + error +"]");

			 }
	 };
	 
	 
   $("#frm").ajaxSubmit(options);
	}
}
</script>
<!-- content -->
	<div id="content">
		<!-- top_content -->
		<div class="top_content">
			<!-- location -->
			<div class="location">
				<ul class="clear">
					<li class="first-child"><a href="#">발송관리</a></li>
					<li><a href="#">자동 발송 관리</a></li>
					<li><a href="#" class="current">이메일 등록</a></li>
				</ul>
			</div>
			<!-- //location -->
		</div>
		<!-- //top_content -->
		
		<div class="inner">
			
			<!-- tbl -->
			<div class="tbl mt10">
			<form name="frm" id="frm" method="post">
			<input type="hidden" id="TPL_GB_CD"  name="TPL_GB_CD" value="${TPL_GB_CD }"/>
				<p class="tbl_tit"><img src="http://static.ssocio.net/admin/images/ico_admin.gif" alt="">이메일 등록</p>
				<table class="upd">
					<colgroup>
						<col style="width:15%">
						<col style="width:*">
					</colgroup>
					<tbody>
						<tr>
							<th scope="row">템플릿 코드</th>
							<td>
								<input type="text" style="width:420px" id="MSG_TPL_CODE" name="MSG_TPL_CODE" maxlength="100" />
							</td>
						</tr>
						<tr>
							<th scope="row">템플릿명</th>
							<td>
								<input type="text" style="width:420px" id="TPL_TITLE" name="TPL_TITLE" maxlength="100" />
							</td>
						</tr>
						<tr>
							<th scope="row" >이메일 제목</th>
							<td>
								<input type="text" style="width:420px" id="TITLE" name="TITLE" maxlength="100" />
							</td>
						</tr>
						<tr>
							<th scope="row">이메일 내용</th>
							<td>
								<textarea id="CONTENTS" name="CONTENTS" cols="30" rows="10" class="textarea" style="width:100%" ></textarea>
							
							</td>
						</tr>
						<tr>
							<th scope="row">테스트발송<br>(이메일주소)</th>
							<td>
								<input type="text" style="width:320px" id="FROM_EMAIL" name="FROM_EMAIL" maxlength="100" placeholder="이메일주소 입력"/>
								<a href="javascript:fn_send_json();" class="btn_w" id="sendBtn"><span id="sendBtnSpan" >발송 테스트</span></a>
							</td>
						</tr>
					</tbody>
				</table>
				</form>
			</div>
			<!-- //tbl -->
			<div class="btn_area tc mt20">
				<a href="javascript:fn_reg();" class="btn_r">저장</a>
				<a href="#" id="cancelBtn" class="btn_b ml10">취소</a>
			</div>

			<div class="tbl mt20">
				<p class="tbl_tit"><img src="http://static.ssocio.net/admin/images/ico_admin.gif" alt="">발송 내용 입력 정보</p>
				<!-- list -->
				<table class="list">
					<colgroup>
						<col style="width:15%">
						<col style="width:15%">
						<col style="width:*">
					</colgroup>
					<thead>	
						<tr>
							<th scope="col">구분</th>
							<th scope="col">코드</th>
							<th scope="col">메시지 제한</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="nolineL">회원 ID</td>
							<td>[{user}]</td>
							<td>메시지 발송시 최대 4자리로 제한</td>
						</tr>
						<tr>
							<td class="nolineL">상품명</td>
							<td>[{pro_item}]</td>
							<td>메시지 발송시 최대 6자리로 제한</td>
						</tr>
						<tr>
							<td class="nolineL">택배사</td>
							<td>[{send_deli}]</td>
							<td>메시지 발송시 최대 10자리로 제한</td>
						</tr>
						<tr>
							<td class="nolineL">운송장 번호</td>
							<td>[{send_num}]</td>
							<td>메시지 발송시 최대 20자리로 제한</td>
						</tr>
						<tr>
							<td class="nolineL">셰어링 종료일</td>
							<td>[{end_data}]</td>
							<td>yyyy-mm-dd 형식으로 발송</td>
						</tr>
						<tr>
							<td class="nolineL">셰어링 종료시간</td>
							<td>[{end_data}]</td>
							<td>HH:MM 형식으로 발송</td>
						</tr>
					</tbody>
				</table>
				<!-- //list -->
			</div>
		</div>
	</div>
	<!-- //content -->


	