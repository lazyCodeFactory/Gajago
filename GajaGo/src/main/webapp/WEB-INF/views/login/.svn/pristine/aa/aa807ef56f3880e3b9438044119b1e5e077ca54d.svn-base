            else {
                $(".cpn_use").attr('rowspan','1');
                $("#TR_PROD_LIST").hide();
            }
            
        });
        
        // 발급대상 변경
        $('[name=ISSUE_CD]').change(function(){
            var cu_id = $(this).attr('id');
            
            if(cu_id == 'issueCdB'){
                $('.mem_find').css({'display':'block'});
                $("#divFileSearch").show();
                $("#aCpnUseCnt").show();
                $("#aTotUseCnt").hide();
            }else{
                $('.mem_find').css({'display':'none'});
                $("#divFileSearch").hide();
                $("#aCpnUseCnt").hide();
                $("#aTotUseCnt").show();
            }
            
        });
        
        // 사용채널 변경
        $(".cpnUseCd").change( function () {
            var val = $(this).val();
            if (val == 'A') {
                $("input[name^=CPN_USE_CD_CHNL]").attr("disabled", true);
