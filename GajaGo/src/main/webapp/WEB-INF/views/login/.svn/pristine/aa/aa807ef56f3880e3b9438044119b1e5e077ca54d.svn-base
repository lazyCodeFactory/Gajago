    // 쿠폰종류에 따른 display
    function setTrDisplay (CPN_GB_CD) {
        /*
         * 쿠폰 종류에 따른 display 변경
         * 10 = 상품할인쿠폰
         * 20 = 배송비쿠폰
         * 30 = 신규가입쿠폰
         * 40 = 첫구매쿠폰
         * 50 = 인쇄배포용쿠폰
         */
         
        var CPN_ISSUE_TGT_GB_CD = $('[name=CPN_ISSUE_TGT_GB_CD]:checked').val(); 
        $("#TR_BNFIT_1").hide();
        $("#TR_BNFIT_2").hide();
        $("#TR_PROD_PRCE").hide();
        $("#TR_EXP_DT").hide();
        $("#TR_CPN_USE_CD").hide();
        $("#TR_CPN_USE").hide();
        $("#TR_ISSUE").hide();
        $("#TR_DUPL_USE").hide();
        $(".cpn_use").attr('rowspan','1');
         
        if (CPN_GB_CD != null && CPN_GB_CD != '') {
            if (CPN_GB_CD == '10') {
                $("#TR_BNFIT_2").show();
                $("#TR_PROD_PRCE").show();
                $("#TR_EXP_DT").show();
                $("#TR_CPN_USE_CD").show();
                $("#TR_CPN_USE").show();
                $("#TR_ISSUE").show();
                $("#TR_DUPL_USE").show();
                
                if (CPN_ISSUE_TGT_GB_CD == 'B') {
                    $(".cpn_use").attr('rowspan','2');
                    $("#TR_PROD_LIST").show();
                }
                else {
                    $(".cpn_use").attr('rowspan','1');
                    $("#TR_PROD_LIST").hide();
                }
            }
            else if (CPN_GB_CD == '20') {
                $("#TR_BNFIT_1").show();
                $("#TR_EXP_DT").show();
                $("#TR_CPN_USE_CD").show();
                $("#TR_CPN_USE").show();
                $("#TR_ISSUE").show();
                $("#TR_DUPL_USE").show();
                $("#TR_PROD_LIST").hide();
            }
            else if (CPN_GB_CD == '30' || CPN_GB_CD == '40') {
                $("#TR_BNFIT_2").show();
                $("#TR_PROD_PRCE").show();
                $("#TR_EXP_DT").show();
                $("#TR_CPN_USE_CD").show();
                $("#TR_CPN_USE").show();
                $("#TR_DUPL_USE").show();
                
                if (CPN_ISSUE_TGT_GB_CD == 'B') {
                    $(".cpn_use").attr('rowspan','2');
                    $("#TR_PROD_LIST").show();
                }
                else {
                    $(".cpn_use").attr('rowspan','1');
                    $("#TR_PROD_LIST").hide();
                }
                
            }
        }
    }
    
    // 카테고리 추가
    function categoryAdd() {
        
        var regCtryCd1 = $("#regCtryCd1 option:selected").text();
        var regCtryCd2 = $("#regCtryCd2 option:selected").text();
        var regCtryCd3 = $("#regCtryCd3 option:selected").text();
        var ctryIdx1 = $("#regCtryCd1 option").index($("#regCtryCd1 option:selected"));
        var ctryIdx2 = $("#regCtryCd2 option").index($("#regCtryCd2 option:selected"));
        var ctryIdx3 = $("#regCtryCd3 option").index($("#regCtryCd3 option:selected"));
        var crtyVal1 = $("#regCtryCd1 option:selected").val();
        var crtyVal2 = $("#regCtryCd2 option:selected").val();
        var crtyVal3 = $("#regCtryCd3 option:selected").val();
        var ctryHtml = "";
        var ctryFlag = true;
        
        if (ctryIdx1 > 0) {
            
            $(".liCtry").each( function (idx) {
                var liId = $(this).attr("id");
                var ctVal;
                if (crtyVal3 != null && crtyVal3 != "") {
                    ctVal = crtyVal3;
                }
                else {
                    if (crtyVal2 != null && crtyVal2 != "") {
                        ctVal = crtyVal2;
                    }
                    else {
                        ctVal = crtyVal1;
                    }
                }
                if (liId == ctVal) {
                    ctryFlag = false;
                }
            });
            
            if (ctryFlag) {
                
                ctryHtml += '<li class="';
                ctryHtml += crtyVal1+""+crtyVal2+""+crtyVal3;
                ctryHtml += ' liCtry" id="';
                if (crtyVal3 != null && crtyVal3 != "") {
                    ctryHtml += crtyVal3;
                }
                else if ((crtyVal3 == null || crtyVal3 == "") && (crtyVal2 != null && crtyVal2 != "")) {
                    ctryHtml += crtyVal2;
                }
                else {
                    ctryHtml += crtyVal1;
                }
                ctryHtml += '" style="display:flex;">';
                ctryHtml += '<a class="aCtry">';
                ctryHtml += '<img src="http://static.ssocio.net/admin/images/btn_minus.gif" alt="쿠폰사용 대상 삭제">';
                ctryHtml += '</a><span class="ml5" style="margin-top:7px !important;"> ';
                if (crtyVal3 != null && crtyVal3 != "") {
                    ctryHtml += regCtryCd1;
                    ctryHtml += ' > ';
                    ctryHtml += regCtryCd2;
                    ctryHtml += ' > ';
                    ctryHtml += regCtryCd3;
                }
                else if ((crtyVal3 == null || crtyVal3 == "") && (crtyVal2 != null && crtyVal2 != "")) {
                    ctryHtml += regCtryCd1;
                    ctryHtml += ' > ';
                    ctryHtml += regCtryCd2;
                }
                else {
                    ctryHtml += regCtryCd1;
                }
                ctryHtml += '</span>';
                ctryHtml += '</li>';
                
                $("#ulCategory").append(ctryHtml);
            }
            
        }
        
    }
    
    // 기획전 등록
    function planAdd() {
        
        var selPlan = $("#selPlan option:selected").text();
        var selIdx = $("#selPlan option").index($("#selPlan option:selected"));
        var selVal = $("#selPlan option:selected").val();
        var planHtml = "";
        var planFlag = true;
                
        if (selIdx > 0) {
            $(".liPlan").each( function (idx) {
                var liClass = $(this).attr("class");
                if (liClass.indexOf(selVal) > -1 ) {
                    planFlag = false;
                }
            });
            
            if (planFlag) {
                planHtml += '<li class="';
                planHtml += selVal;
                planHtml += ' liPlan" id="';
                planHtml += selVal;
                planHtml += '" style="display:flex;">';
                planHtml += '<a class="aPlan">';
                planHtml += '<img src="http://static.ssocio.net/admin/images/btn_minus.gif" alt="기획전 대상 삭제">';
                planHtml += '</a><span class="ml5" style="margin-top:7px !important;"> ';
                planHtml += selPlan;
                planHtml += '</span>';
                planHtml += '</li>';
                $("#ulPlan").append(planHtml);
            }
            
        }
        
    }
    
