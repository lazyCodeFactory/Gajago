        $("#bnfitDscntRate").keyup(function () {
            numberOnly($(this));
            var bnfitDscntRate = $(this).val();
            if (bnfitDscntRate > 100) {
                bnfitDscntRate = 100;
            }
            $("#bnfitDscntRate").val(bnfitDscntRate);
        });
        $("#bnfitDscntRate").blur(function () {
            numberOnly($(this));
            var bnfitDscntRate = $(this).val();
            if (bnfitDscntRate > 100) {
                bnfitDscntRate = 100;
            }
